---
import Logo from "../assets/logo.svg";
import IconFacebook from "../assets/footer/icon-facebook.svg";
import IconInstagram from "../assets/footer/icon-instagram.svg";
import IconTwitter from "../assets/footer/icon-twitter.svg";
import IconLinkedIn from "../assets/footer/icon-linkedIn.svg";
---

<header>
  <div class="header-top">
    <div class="info">
      <span class="emergency">
        For emergency cases:
        <a href="tel:8001234567">800 123 45 67</a>
      </span>
      <span>Location:121 Wallstreet Street, NY , USA</span>
      <span>Open hours: 9.00-24.00 Mon-Sat</span>
      <span>Email:info@Ddsgnr.com</span>
    </div>
    <div class="socials">
      <ul>
        <li>
          <a href="#">
            <img
              src={IconFacebook.src}
              width="24"
              height="24"
              alt="facebook icon"
            />
            <span class="a11y-hidden">Facebook</span>
          </a>
        </li>
        <li>
          <a href="#">
            <img
              src={IconInstagram.src}
              width="24"
              height="24"
              alt="Instagram icon"
            />
            <span class="a11y-hidden">Instagram</span>
          </a>
        </li>
        <li>
          <a href="#">
            <img
              src={IconTwitter.src}
              width="24"
              height="24"
              alt="Twitter icon"
            />
            <span class="a11y-hidden">Twitter</span>
          </a>
        </li>
        <li>
          <a href="#">
            <img
              src={IconLinkedIn.src}
              width="24"
              height="24"
              alt="Linkedin icon"
            />
            <span class="a11y-hidden">Linkedin</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="header-bottom">
    <div class="logo">
      <img src={Logo.src} alt="Ddsgnr logo" />
      <span>Ddsgnr</span>
    </div>
    <div class="header-bottom__right">
      <ul class="menu">
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/About">About</a>
        </li>
        <li>
          <a href="/Services">Services</a>
        </li>
        <li>
          <a href="#">Shop</a>
        </li>
        <li>
          <a href="/Contact">Contacts</a>
        </li>
      </ul>
      <a href="/Contact" class="link-button">Book Your Appointment Now</a>
    </div>
  </div>
</header>

<style>
  .header-top,
  .header-bottom {
    padding: 20px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .header-top {
    padding: 15px 30px;
  }
  .logo {
    font-weight: 700;
    font-size: 25px;
    line-height: 30px;
  }
  .info {
    font-size: 14px;
    span {
      position: relative;
      padding-right: 30px;
    }
    span.emergency {
      font-weight: 600;
      a {
        color: #000;
        text-decoration: underline;
      }
    }
    span::after {
      content: "";
      display: block;
      width: 1px;
      height: 30px;
      background-color: #676767;
      position: absolute;
      right: 15px;
      top: -5px;
    }
    span:last-child::after {
      display: none;
    }
    span:last-child {
      padding-right: 0;
    }
  }
  .header-bottom {
    border-top: 1px solid #000;
    .header-bottom__right {
      display: flex;
      align-items: center;
      font-size: 16px;
      line-height: 24px;
    }
    .menu {
      gap: 32px;
      margin-right: 32px;
      a {
        color: #000;
      }
    }
  }
  .socials ul,
  .menu {
    display: flex;
  }
  .link-button {
    background-color: #000;
    color: #fff;
    border-radius: 5px;
    padding: 8px 20px;
  }
</style>
