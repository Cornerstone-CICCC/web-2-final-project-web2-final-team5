        border-image: linear-gradient(45deg, rgb(183, 1, 1), blue) 1;
        border-radius: 5px;
    }

    .top-box .mobile {
        display: none;
    }

    @media screen and (max-width: 769px) {
        .top-box h1 {
            font-size: 40px;
        }

        .top-box .desktop {
            display: none;
        }

        .top-box .mobile {
