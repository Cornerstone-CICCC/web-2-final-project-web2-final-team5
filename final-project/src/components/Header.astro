---
import Logo from "../assets/logo.svg";
import IconFacebook from "../assets/footer/icon-facebook.svg";
import IconInstagram from "../assets/footer/icon-instagram.svg";
import IconTwitter from "../assets/footer/icon-twitter.svg";
import IconLinkedIn from "../assets/footer/icon-linkedIn.svg";
---

<header>
  <div class="header-top">
    <div class="info">
      <span class="emergency">
        For emergency cases:
        <a href="tel:8001234567">800 123 45 67</a>
      </span>
      <span>Location:121 Wallstreet Street, NY , USA</span>
      <span>Open hours: 9.00-24.00 Mon-Sat</span>
      <span>Email:info@Ddsgnr.com</span>
    </div>
    <div class="socials">
      <ul>
        <li>
          <a href="#">
            <img
              src={IconFacebook.src}
              width="24"
              height="24"
              alt="facebook icon"
            />
            <span class="a11y-hidden">Facebook</span>
          </a>
        </li>
        <li>
          <a href="#">
            <img
              src={IconInstagram.src}
              width="24"
              height="24"
              alt="Instagram icon"
            />
            <span class="a11y-hidden">Instagram</span>
          </a>
        </li>
        <li>
          <a href="#">
            <img
              src={IconTwitter.src}
              width="24"
              height="24"
              alt="Twitter icon"
            />
            <span class="a11y-hidden">Twitter</span>
          </a>
        </li>
        <li>
          <a href="#">
            <img
              src={IconLinkedIn.src}
              width="24"
              height="24"
              alt="Linkedin icon"
            />
            <span class="a11y-hidden">Linkedin</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="header-bottom">
    <div class="logo">
      <img src={Logo.src} alt="Ddsgnr logo" />
      <span>Ddsgnr</span>
    </div>
    <div class="header-bottom__right">
      <ul class="menu">
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/About">About</a>
        </li>
        <li>
          <a href="/Services">Services</a>
        </li>
        <li>
          <a href="#">Shop</a>
        </li>
        <li>
          <a href="/Contact">Contacts</a>
        </li>
      </ul>
      <a href="/Contact" class="link-button">Book Your Appointment Now</a>
    </div>
    <div class="mobile-menu">
      <input type="checkbox" id="menu-checkbox" />
      <label for="menu-checkbox">
        <span></span>
        <span></span>
        <span></span>
      </label>
      <div class="menu-wrap">
        <ul class="menu-list">
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/About">About</a>
          </li>
          <li>
            <a href="/Services">Services</a>
          </li>
          <li>
            <a href="#">Shop</a>
          </li>
          <li>
            <a href="/Contact">Contacts</a>
          </li>
        </ul>
        <div class="other-list">
          <div class="socials">
            <ul>
              <li>
                <a href="#">
                  <img
                    src={IconFacebook.src}
                    width="24"
                    height="24"
                    alt="facebook icon"
                  />
                  <span class="a11y-hidden">Facebook</span>
                </a>
              </li>
              <li>
                <a href="#">
                  <img
                    src={IconInstagram.src}
                    width="24"
                    height="24"
                    alt="Instagram icon"
                  />
                  <span class="a11y-hidden">Instagram</span>
                </a>
              </li>
              <li>
                <a href="#">
                  <img
                    src={IconTwitter.src}
                    width="24"
                    height="24"
                    alt="Twitter icon"
                  />
                  <span class="a11y-hidden">Twitter</span>
                </a>
              </li>
              <li>
                <a href="#">
                  <img
                    src={IconLinkedIn.src}
                    width="24"
                    height="24"
                    alt="Linkedin icon"
                  />
                  <span class="a11y-hidden">Linkedin</span>
                </a>
              </li>
            </ul>
          </div>
          <div class="info">
            <span class="emergency">
              For emergency cases:
              <a href="tel:8001234567">800 123 45 67</a>
            </span>
            <span>Location:121 Wallstreet Street, NY , USA</span>
            <span>Open hours: 9.00-24.00 Mon-Sat</span>
            <span>Email:info@Ddsgnr.com</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  header {
    border-bottom: 1px solid #000;
    background-color: #fff;
  }
  .header-top,
  .header-bottom {
    padding: 20px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .header-top {
    padding: 15px 30px;
  }
  .logo {
    font-weight: 700;
    font-size: 25px;
    line-height: 30px;
    span {
      font-family: "Inter", serif;
    }
  }
  .info {
    font-size: 14px;
    span {
      position: relative;
      padding-right: 30px;
    }
    span.emergency {
      font-weight: 600;
      a {
        color: #000;
        text-decoration: underline;
      }
    }
    span::after {
      content: "";
      display: block;
      width: 1px;
      height: 30px;
      background-color: #676767;
      position: absolute;
      right: 15px;
      top: -5px;
    }
    span:last-child::after {
      display: none;
    }
    span:last-child {
      padding-right: 0;
    }
  }
  .mobile-menu {
    display: none;
  }
  .header-bottom {
    border-top: 1px solid #000;
    .header-bottom__right {
      display: flex;
      align-items: center;
      font-size: 16px;
      line-height: 24px;
    }
    .menu {
      gap: 32px;
      margin-right: 32px;
      a {
        color: #000;
      }
    }
  }
  .socials ul,
  .menu {
    display: flex;
  }
  .link-button {
    background-color: #000;
    color: #fff;
    border-radius: 5px;
    padding: 8px 20px;
  }

  @media (max-width: 768px) {
    .header-top,
    .header-bottom {
      padding-left: 24px;
      padding-right: 24px;
    }
    .header-top,
    .header-bottom .header-bottom__right {
      display: none;
    }
    .header-bottom {
      border-top: 0;
    }
    .mobile-menu {
      display: block;
      #menu-checkbox {
        display: none;
      }
      label {
        position: relative;
        display: block;
        width: 48px;
        height: 48px;
        cursor: pointer;
        z-index: 2;
        transition: all 2s ease-in;
      }
      label span {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: block;
        width: 18px;
        height: 2px;
        background-color: #000;
        transition: all 0.3s linear;
        opacity: 1;
      }
      label span:first-child {
        transform: translate(-50%, -8px) rotate(0deg);
      }
      label span:last-child {
        transform: translate(-50%, 6px) rotate(0deg);
      }

      #menu-checkbox:checked ~ label span:first-child {
        transform: translate(-8px, -2px) rotate(45deg);
      }
      #menu-checkbox:checked ~ label span:nth-child(2) {
        opacity: 0;
      }
      #menu-checkbox:checked ~ label span:last-child {
        transform: translate(-8px, -2px) rotate(-45deg);
      }
      .menu-wrap {
        background-color: #fff;
        position: fixed;
        top: 0;
        right: 0;
        height: 100vh;
        display: flex;
        flex-direction: column;
        gap: 16px;
        justify-content: space-evenly;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.75);
        transition: all 0.5s ease-in-out;
        overflow: hidden;
        padding: 24px 36px;
        width: 360px;
        transform: translateX(380px);
        z-index: 100;
      }

      #menu-checkbox:checked ~ .menu-wrap {
        transform: translateX(0);
      }

      .menu-wrap .menu-list {
        text-align: left;
        font-size: 24px;
        li {
          margin-top: 16px;
        }
        a {
          color: #000;
        }
      }
      .info {
        display: flex;
        flex-direction: column;
        margin-top: 10px;
        gap: 8px;
        span::after {
          display: none;
        }
      }
    }
  }
</style>

<script>
  const mobileMenu = document.querySelector("#menu-checkbox");
  const bodyEl = document.querySelector("body");
  const handleBurgerMenu = (e) => {
    if (e.target.checked) {
      (bodyEl as HTMLElement).style.overflow = "hidden";
    } else {
      (bodyEl as HTMLElement).style.overflow = "";
    }
  };

  (mobileMenu as HTMLElement).addEventListener("change", handleBurgerMenu);
</script>
