<script>
  const accordionButtons = document.querySelectorAll(".accordion-header");

  const handleAccordion = (e) => {
    const target = e.currentTarget;
    const targetDetail = target.nextElementSibling;

    if (target.classList.contains("open")) {
      targetDetail.style.maxHeight = null;
      target.classList.remove("open");
      targetDetail.classList.remove("open");
    } else {
      targetDetail.style.maxHeight = targetDetail.scrollHeight + 40 + "px";
      target.classList.add("open");
      targetDetail.classList.add("open");
    }
  };

  accordionButtons.forEach((button) => {
    button.addEventListener("click", handleAccordion);
  });
</script>

