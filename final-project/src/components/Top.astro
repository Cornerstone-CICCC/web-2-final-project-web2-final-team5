<main>
    <div class="top-box">
        <h1>Expert Car Care You Can Trust</h1>
        <p class="desktop">Get Back on the Road Quickly with Ddsgnr, Expert Car Care You Can Trust,Expert Car Care You Can TrustExpert Car Care You Can TrustExpert Car Care You Can TrustExpert Car Care You Can Trust</p>
        <p class="mobile">Get Back on the Road Quickly with Ddsgnr, Expert Car Care You Can Trust,Expert Car Care You Can Trust</p>
        <div class="button-container">
            <button class="book-btn">Book Your Appointment Now</button>
        </div>
    </div>
</main>

<style>
    main {
        background-image: url("../assets/top-images/top-image.png");
        background-size: cover;
        background-position: center;
        height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
    }

    .top-box {
        color: white;
        width: 100%;
        padding: 5vw;
    }

    .top-box h1 {
        font-size: 56px;
        font-weight: 700;
        width: 90vw;
        max-width: 560px;
    }

    .top-box p {
        width: 85vw;
        max-width: 560px;
        font-size: 18px;
        margin: 2rem 0;
        line-height: 1.5;
    }

    .top-box .button-container {
        width: fit-content;
    }

    .top-box button {
        background-color: white;
        padding: 1rem;
        transition: all 0.3s ease;
        border: 1.5px solid white ;
        border-radius: 5px;
    }

    .top-box button:hover {
        background-color: black;
        color: white;
        border: 1.5px solid transparent;
        border-image: linear-gradient(45deg, rgb(159, 11, 11), rgb(13, 13, 160)) 1;
    }

    .top-box .mobile {
        display: none;
    }

    @media screen and (max-width: 769px) {
        .top-box h1 {
            font-size: 40px;
        }

        .top-box .desktop {
            display: none;
        }

        .top-box .mobile {
            display: block;
        }
    }
</style>

<script>
    import {gsap} from 'gsap'
    const topHeading = document.querySelector(".top-box h1")
    const desktop = document.querySelector(".desktop")
    const mobile = document.querySelector(".mobile")
    const topButton = document.querySelector(".button-container")

    const tl = gsap.timeline()
    tl.from(topHeading, {y: -50, opacity: 0, duration: 1, delay: 0.8}, "-=0.5")
    tl.from(desktop, {y: -50, opacity: 0, duration: 1}, "-=0.8")
    tl.from(mobile, {y: -50, opacity: 0, duration: 1}, "<")
    tl.from(topButton, {y: -50, opacity: 0, duration: 1}, "-=0.7")
</script>