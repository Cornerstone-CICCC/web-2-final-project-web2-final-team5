<style>
    main {
        background-image: url("../assets/top-images/top-image.png");
        background-size: cover;
        background-position: center;
        height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
    }

    .top-box {
        color: white;
        width: 100%;
        padding: 5vw;
    }

    .top-box h1 {
        font-size: 56px;
        font-weight: 700;
        width: 90vw;
        max-width: 560px;
    }

    .top-box p {
        width: 85vw;
        max-width: 560px;
        font-size: 18px;
        margin: 2rem 0;
        line-height: 1.5;
    }

    .top-box button {
        background-color: white;
        padding: 1rem;
        transition: all 0.3s ease;
        position: relative;
        border: 1px solid white ;
        border-radius: 5px;
    }

